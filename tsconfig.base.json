{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "paths": {
      "@nx-ts-vite-react-graphql-styled-monorepo-example/data-access": ["data-access/src"],
      "@nx-ts-vite-react-graphql-styled-monorepo-example/ui-kit": ["ui-kit/src"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "tmp"]
}
