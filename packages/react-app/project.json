{
  "root": "packages/react-app",
  "projectType": "application",
  "sourceRoot": "packages/react-app/src",
  "tags": [],
  "targets": {
    "type-check": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/react-app",
        "commands": [
          {
            "command": "tsc --project tsconfig.app.json --noEmit"
          }
        ]
      }
    },
    "serve": {
      "executor": "nx-plugin-vite:serve",
      "options": {
        "configFile": "packages/react-app/vite.config.ts",
        "port": 3000,
        "host": false,
        "https": false
      }
    },
    "preview": {
      "executor": "nx-plugin-vite:preview",
      "options": {
        "configFile": "packages/react-app/vite.config.ts"
      }
    },
    "build": {
      "executor": "nx-plugin-vite:build",
      "options": {
        "cwd": "./packages/react-app",
        "outDir": "dist",
        "configFile": "packages/react-app/vite.config.ts",
        "watch": false,
        "write": true,
        "emitAtRootLevel": false,
        "manifest": true
      }
    },
    "build-serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/react-app",
        "commands": [
          {
            "command": "npx http-server dist"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/react-app/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/react-app/src/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/react-app",
        "commands": [
          {
            "command": "vitest run --config ./vitest.config.ts --coverage --passWithNoTests"
          }
        ]
      }
    }
  }
}
