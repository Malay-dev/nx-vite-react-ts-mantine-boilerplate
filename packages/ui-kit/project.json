{
  "name": "ui-kit",
  "sourceRoot": "packages/ui-kit/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "tsc --project tsconfig.lib.json --noEmit"
          }
        ]
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "cypress run --component --config-file=cypress.config.ts"
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "vite build --emptyOutDir"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-kit/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-kit/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "vitest run --config ./vitest.config.ts --coverage --passWithNoTests"
          }
        ]
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "configDir": "packages/ui-kit/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook:build": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/react",
        "configDir": "packages/ui-kit/.storybook",
        "outputDir": "packages/ui-kit/dist/storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook:serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "npx http-server dist/storybook"
          }
        ]
      }
    }
  }
}
