{
  "root": "packages/ui-kit",
  "sourceRoot": "packages/ui-kit/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "type-check": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "tsc --project tsconfig.lib.json --noEmit"
          }
        ]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "vite build --emptyOutDir"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-kit/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui-kit/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ui-kit"],
      "options": {
        "jestConfig": "packages/ui-kit/jest.config.js",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "packages/ui-kit/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook-build": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "packages/ui-kit/dist/storybook",
        "config": {
          "configFolder": "packages/ui-kit/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook-build-serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./packages/ui-kit",
        "commands": [
          {
            "command": "npx http-server dist/storybook"
          }
        ]
      }
    }
  }
}
